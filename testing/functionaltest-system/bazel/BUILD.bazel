load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@rules_pkg//pkg:mappings.bzl", "pkg_attributes", "pkg_files")

exports_files(
    glob(["*.bzl"]),
    visibility = ["//docs/bazel:__pkg__"],
)

bzl_library(
    name = "rpc_test",
    srcs = ["rpc_test.bzl"],
    visibility = ["//visibility:public"],
    deps = ["@aspect_bazel_lib//lib:jq"],
)

bzl_library(
    name = "ssl_cert",
    srcs = ["ssl_cert.bzl"],
    visibility = ["//visibility:public"],
    deps = ["@bazel_skylib//rules:write_file"],
)

exports_files([
    "curl_rpc_invoker",
    "ghz_test_runner",
    "grpcurl_rpc_invoker",
    "rpc_diff_test_runner",
    "verify_ca_bundle",
    "verify_ssl_cert",
    "wrk2_test_runner",
])

_BINARIES_GLOB_SPEC = [
    "*_rpc_invoker",
    "*_test_runner",
    "verify_*",
]

filegroup(
    name = "testrunner_files",
    srcs = glob(
        include = ["*"],
        exclude = _BINARIES_GLOB_SPEC,
    ),
    visibility = ["//:__pkg__"],
)

filegroup(
    name = "testrunner_binaries",
    srcs = glob(include = _BINARIES_GLOB_SPEC),
)

pkg_files(
    name = "bazel_binaries",
    srcs = [":testrunner_binaries"],
    attributes = pkg_attributes(mode = "0755"),
    prefix = "/functionaltest-system/bazel",
    visibility = ["//:__pkg__"],
)
