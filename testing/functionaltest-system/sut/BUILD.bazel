load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

package(default_visibility = ["//sut:__subpackages__"])

exports_files(
    glob(["*.bzl"]),
    visibility = ["//docs/bazel:__pkg__"],
)

bzl_library(
    name = "endpoint",
    srcs = ["endpoint.bzl"],
    visibility = ["//visibility:public"],
)

bzl_library(
    name = "sut",
    srcs = ["sut.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "@aspect_bazel_lib//lib:copy_to_directory",
        "@aspect_bazel_lib//lib:glob_match",
        "@rules_pkg//pkg:bzl_srcs",
    ],
)

go_library(
    name = "sut_lib",
    srcs = ["main.go"],
    importpath = "github.com/privacysandbox/functionaltest-system/sut",
    deps = [
        "//sut/cmd:go_default_library",
    ],
)

go_binary(
    name = "functionaltest",
    embed = [":sut_lib"],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "testrunner_files",
    srcs = glob([
        "*.bzl",
        "BUILD",
    ]),
    visibility = ["//:__pkg__"],
)

genrule(
    name = "copy_to_dist",
    srcs = [
        ":functionaltest",
    ],
    outs = ["copy_to_dist.bin"],
    cmd_bash = """cat << EOF > '$@'
mkdir -p dist
cp $(execpath :functionaltest) dist
builders/tools/normalize-dist
EOF""",
    executable = True,
    local = True,
)
